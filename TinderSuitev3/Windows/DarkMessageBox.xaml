<Window x:Class="TinderSuitev3.DarkMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource CustomWindowStyle}"
        SizeToContent="Height"
        Title="TinderSuite" Width="284" MinWidth="284" MaxWidth="284" Loaded="Window_Loaded">
    <Grid>
        <Border BorderThickness="1" CornerRadius="5" Padding="10">
            <StackPanel>
                <TextBlock x:Name="MessageLabel" Text="Default Message" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />
                <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20" Width="120" Padding="0, 6" Click="ButtonBase_OnClick"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
